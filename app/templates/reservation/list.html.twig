{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.reservation_list'|trans}}
{% endblock %}

{% block body %}
    <h1>{{ 'title.reservation_list'|trans}}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'label.user'|trans }}</th>
            <th>{{ 'label.title'|trans }}</th>
            <th>{{ 'label.status'|trans }}</th>
            <th>{{ 'label.comment'|trans }}</th>
            <th>{{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.user.email }}</td>
                <td>{{ reservation.task.title }}</td>
                <td>{{ reservation.status|trans }}</td>
                <td>{{ reservation.comment }}</td>
                <td>
                    {% if is_granted('CHANGE_STATUS', reservation) %}
                        <a class="btn btn-primary btn-sm" href="{{ url('reservation_change_status', {id: reservation.id}) }}" title="{{ 'action.change_status'|trans }}">
                            {{ 'action.change_status'|trans }}
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ url('task_index') }}" title="{{ 'action.task_list'|trans }}">
        {{ 'action.task_list'|trans }}
    </a>

{% endblock %}
