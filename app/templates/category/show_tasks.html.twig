{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.show_tasks'|trans }} {{ category.title }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.show_tasks'|trans }} {{ category.title }}</h1>

    {% if tasks is not empty %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.created_at'|trans }}</th>
                <th>{{ 'label.updated_at'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.title }}</td>
                    <td>{{ task.createdAt|format_date('long') }}</td>
                    <td>{{ task.updatedAt|format_date('long') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ 'message.record_not_found'|trans }}</p>
    {% endif %}

    <p>
        <a href="{{ url('category_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    </p>

{% endblock %}
