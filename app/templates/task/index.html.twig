{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.task_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.task_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="row text-center">
            <div class="col-md-6">
                {{ knp_pagination_render(pagination) }}
            </div>
            <div class="col-md-3">
                <a href="{{ url('category_index') }}" title="{{ 'action.category_list'|trans }}" class="btn btn-secondary">
                    {{ 'action.category_list'|trans }}
                </a>
            </div>
            <div class="col-md-3">
                <a href="{{ url('reservation_new') }}" title="{{ 'action.reservation_new'|trans }}" class="btn btn-primary">
                    {{ 'action.reservation_new'|trans }}
                </a>
                <a href="{{ url('reservation_list') }}" title="{{ 'action.reservation_list'|trans }}" class="btn btn-secondary">
                    {{ 'action.reservation_list'|trans }}
                </a>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'task.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'task.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'task.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'task.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_category'|trans, 'category.title') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for task in pagination.items %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.createdAt|format_date('long') }}</td>
                    <td>{{ task.updatedAt|format_date('long') }}</td>
                    <td>{{ task.title }}</td>
                    <td>{{ task.category.title }}</td>
                    <td>
                        {% if is_granted('VIEW', task) %}
                            <a class="btn btn-primary btn-sm" href="{{ url('task_show', {id: task.id}) }}" title="{{ 'action.show'|trans }}">
                                {{ 'action.show'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('EDIT', task) %}
                            <a class="btn btn-primary btn-sm" href="{{ url('task_edit', {id: task.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', task) %}
                            <a class="btn btn-primary btn-sm" href="{{ url('task_delete', {id: task.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('CREATE', task) %}
                            <a class="btn btn-primary btn-sm" href="{{ url('task_create', {id: task.id}) }}" title="{{ 'action.create'|trans }}">
                                {{ 'action.create'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}